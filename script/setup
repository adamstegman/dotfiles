#!/usr/bin/env sh

set -euo pipefail

cd "$(dirname $0)"/..

# Ordered so dependencies are resolved
declare -a packages=(
  homebrew
  nova
  bash
  zsh
)
for package in "${packages[@]}"; do
  if [ -f "$package/install.sh" ]; then
    echo "ğŸ”µ Installing $package..."
    sh -c "$package/install.sh"
  fi
done
